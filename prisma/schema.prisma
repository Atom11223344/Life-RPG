model QuestLog {
  id          String    @id @default(cuid())
  completedAt DateTime  @default(now())

  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

  // เปลี่ยนเป็น Optional (?) เพื่อรองรับ Gym Quest / Bonus ที่ไม่มีจริงใน DB
  questId     String?
  quest       Quest?    @relation(fields: [questId], references: [id])

  // ✅ เพิ่ม 2 ช่องนี้ใหม่
  questTitle  String    @default("Activity") // เก็บชื่อเควสไว้เลย (เผื่อเควสต้นทางหาย)
  customId    String?   // เก็บ ID ของพวก Gym Quest หรือ Bonus (เช่น 'gym-d1-1')
}

// Model อื่นๆ (User, Character, Quest) ปล่อยไว้เหมือนเดิมครับ
// อย่าลืม Character ต้องมี field: plan String @default("RANDOM") ด้วยนะครับ (จากรอบที่แล้ว)

enum StatType {
  STR
  INT
  VIT
}
// ✅ สร้าง Model ใหม่: เก็บตารางกิจวัตร
model Routine {
  id          String    @id @default(cuid())
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  dayIndex    Int       // วันที่เท่าไหร่ของลูป (เริ่มที่ 1)
  questId     String    // ต้องทำเควสไหนในวันนั้น
  quest       Quest     @relation(fields: [questId], references: [id])

  @@unique([characterId, dayIndex, questId]) // ห้ามซ้ำกันในวันเดียวกัน
}